{
    // Python settings
    "python.pythonPath": "/usr/bin/python3",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true,
    "python.formatting.provider": "black",
    // Jupyter Notebook settings
    "jupyter.notebookFileRoot": "${workspaceFolder}/resources/interactive_notebooks",
    // Mojo settings (placeholder, update as Mojo tooling matures)
    "mojo.compiler.path": "/path/to/mojo/compiler",
    // Editor settings
    "editor.formatOnSave": true,
    "editor.rulers": [
        80,
        120
    ],
    // File exclusions
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/__pycache__": true,
        "**/*.pyc": true
    },
    // Search settings
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true
    },
    // Workspace-specific settings
    "workbench.colorCustomizations": {
        "activityBar.background": "#1A1A2E",
        "sideBar.background": "#16213E"
    }
}